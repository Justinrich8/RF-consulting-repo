{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "strict": true,
    "module": "node16",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "src/*": ["./src/*"]
    },
    "outDir": "./dist"
  },
  "include": ["i18n", "src"]
}
